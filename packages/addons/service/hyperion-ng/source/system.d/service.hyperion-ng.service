[Unit]
Description=Hyperion.NG service
After=graphical.target

[Service]
Type=forking
ExecStartPre=/bin/sh -c "exec sh /storage/.kodi/addons/service.hyperion-ng/bin/legacycheck.sh"
ExecStart=/bin/sh -c "exec sh /storage/.kodi/addons/service.hyperion-ng/bin/hyperiond.start"
ExecReload=/bin/kill -HUP $MAINPID
PIDFile=/run/hyperiond.pid
TimeoutStopSec=2
Restart=always
RestartSec=10
StartLimitInterval=0

[Install]
WantedBy=default.target
