. config/options $1

echo "image: writing u-boot to $(basename $DISK)"
dd if="$INSTALL/usr/share/bootloader/u-boot.bin" of="$DISK" conv=fsync,notrunc bs=$((0x200)) seek=$((0x50)) >"$SAVE_ERROR" 2>&1 || show_error
