DESTDIR="$(get_build_dir u-boot)"

echo "$BOOTLOADER: creating u-boot.bin"

mkdir -p $INSTALL/usr/share/bootloader

if [ -f $DESTDIR/u-boot.bin ] ; then
  cp -av $DESTDIR/u-boot.bin $INSTALL/usr/share/bootloader
fi
